#!/bin/sh

PHP_INI="./bin/php-cli.ini"

cd $(dirname $(cd $(dirname $0); pwd))

name=${1:-}

if [ -n "$name" ] ; then
  /usr/bin/env php -c $PHP_INI -f src/tests/code/$name/$name.php
else
  /usr/bin/env php -c $PHP_INI -f src/tests/code/phpcs/phpcs.php
  /usr/bin/env php -c $PHP_INI -f src/tests/code/phpmd/phpmd.php
fi
